{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductSearch",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Product name or partial name to search for."
    },
    "category_id": {
      "type": ["integer", "string"],
      "description": "Category ID to filter products."
    },
    "brand": {
      "type": "string",
      "description": "Brand name to filter products."
    },
    "min_price": {
      "type": "number",
      "minimum": 0,
      "description": "Minimum price filter."
    },
    "max_price": {
      "type": "number",
      "minimum": 0,
      "description": "Maximum price filter."
    },
    "in_stock": {
      "type": "boolean",
      "description": "Whether to only include products in stock."
    }
  },
  "additionalProperties": false
}
