{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "password_hash": {
      "type": "string",
      "minLength": 5,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "password_hash",
    "email"
  ]
}
